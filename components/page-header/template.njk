{% from 'heading/macro.njk' import bcHeading %}
{% from 'image/macro.njk' import bcImage %}

<div
    data-module="bc-page-header"
    class="bc-page-header {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <div class="bc-page-header__inner">
        <div class="bc-page-header__body">
            {{ bcHeading(params.heading) }}
        </div>
        {{ bcImage(params.image) }}    
    </div>
</div>
