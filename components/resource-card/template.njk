{% from 'image/macro.njk' import bcImage %}
{% from 'heading/macro.njk' import bcHeading %}
{% from 'button/macro.njk' import bcButton %}



<article
    data-module="bc-resource-card"
    class="bc-resource-card {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <div class="bc-resource-card__body">
        {{ bcImage(params.image) }}
        {{ bcHeading(params.heading) }}
    </div>
    <div class="bc-resource-card__cta">
        {{ bcButton({
            href: '#',
            appearance: 'reverse',
            text: 'Visit site'
        }) }}
    </div>
</article>