{% extends '@t-right-sidebar' %}

{% block stepIndicator %}
    {% from 'icon/macro.njk' import bcIcon %}

    <div data-module="bc-step-indicator" class="bc-step-indicator">
        <div class="bc-step-indicator__step complete">
            <div class="bc-step-indicator__step-number">
                {{ bcIcon({
                    variant: 'check'
                }) }}
            </div>
            <div class="bc-step-indicator__body">
                <p><strong>Step 1</strong></p>
                <p>Basket</p>
            </div> 
        </div>
        <div class="bc-step-indicator__line complete"></div>
        <div class="bc-step-indicator__step complete">
            <div class="bc-step-indicator__step-number">
                {{ bcIcon({
                    variant: 'check'
                }) }}
            </div>
            <div class="bc-step-indicator__body">
                <p><strong>Step 2</strong></p>
                <p>Billing</p>
            </div> 
        </div>
        <div class="bc-step-indicator__line complete"></div>
        <div class="bc-step-indicator__step" aria-current="step">
            <div class="bc-step-indicator__step-number">3</div>
            <div class="bc-step-indicator__body">
                <p><strong>Step 3</strong></p>
                <p>Gift aid</p>
            </div> 
        </div>
        <div class="bc-step-indicator__line"></div>
        <div class="bc-step-indicator__step">
            <div class="bc-step-indicator__step-number">4</div>
            <div class="bc-step-indicator__body">
                <p><strong>Step 4</strong></p>
                <p>Payment</p>
            </div> 
        </div>
    </div>         
{% endblock %}


{% block body %}
	{% from "heading/macro.njk" import bcHeading %}
	{% from "form/macro.njk" import bcForm %}
	{% from "button/macro.njk" import bcButton %}
    {% from "checkbox/macro.njk" import bcCheckbox %}

	<div class="ip-gift-aid">  

        {{ bcHeading({
			classes: 'fs-!-margin-bottom-2',
			hierarchy: 1,
			text: 'Gift aid'
		}) }}


        <div class="ip-gift-aid__section">
           
            {% call bcForm({
                classes: 'fs-!-margin-bottom-6',
                action: '',
                method: '',
                disableUnloadPrompt: true
            }) %}

                {{ bcCheckbox({
                    name: 'ExampleCheckboxSingle',
                    options: [
                        {
                            text: 'Yes, I want to Gift Aid any donations I make in the future. I am a UK taxpayer and understand that if I pay less Income Tax and/or Capital Gains Tax than the amount of Gift Aid claimed on all my donations in that tax year it is my responsibility to pay any difference. Gift Aid is reclaimed by UK Youth from the tax you pay for the current tax year.',
                            value: '1',
                            required: true
                        }
                    ]
                }) }}
                
                <div class="bc-button-group fs-!-margin-top-6">
                    {{ bcButton({
                        appearance: 'link',
                        text: 'Return to Shipping'
                    }) }}
                
                    {{ bcButton({
                        appearance: 'primary',
                        type: 'submit',
                        text: 'Continue to payment',
                        attributes: { 
                            'name': 'testName', 
                            'value': 'testValue' 
                        }
                    }) }}
                </div>
            {% endcall %}
        </div>
	</div>

{% endblock %}

{% block sidebar %}
    {% from "cart/macro.njk" import bcCart %}
    {% from "alert/macro.njk" import bcAlert %}

	<div class="ip-gift-aid__cart fs-!-padding-block-3 fs-!-padding-inline-2">
        <div class="ip-gift-aid__cart-items fs-!-margin-bottom-4">
            {{ bcCart({
                position: 'sidebar',
                items: [
                    { 
                        name: 'UK Youth Fund Thriving Minds - Meet the Funder Application Webinar',
                        details: 'One-off payment',
                        price: '£30'
                    },
                    { 
                        name: 'Monthly donation',
                        details: 'Direct debit',
                        price: '£5'
                    }
                ]
            }) }}
        </div>

        <div class="ip-gift-aid__cart-summary">
            <p>Total</p>
            <p class="ip-gift-aid__total-amount">£35</p>
        </div>
	</div>

    <div class="ip-gift-aid__cart-notification fs-!-margin-top-5">
        {% call bcAlert() %}
            <p>Your basket contains a mix of one-off purchases and recurring payments. Payment details for these will be entered separately.</p>
        {% endcall %}
    </div>

{% endblock %}