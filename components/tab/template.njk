<div
    data-module="bc-tab"
    class="bc-tab {%- for v in params.variants %} bc-tab--{{ v }}{% endfor %} {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <ul class="bc-tab__list">
        {%- for item in params.tablist %}
            <li class="bc-tab__item">
                <a
                    class="bc-tab__tab"
                    href="#{{ item.for }}">
                    {{ (item.html | safe) if item.html else item.text }}
                </a>
            </li>
        {%- endfor %}
    </ul>
    {{ caller() if caller }}
</div>
