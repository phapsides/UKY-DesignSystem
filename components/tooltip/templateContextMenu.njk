<ul
	class="bc-tooltip__menu {%- if params.classes %} {{ params.classes }}{% endif %}"
	{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
	{% for item in params.items %}
		<li class="bc-tooltip__menu-item">
			{%- if item.href %}
				<a 
					class="bc-tooltip__menu-link {%- if item.classes %} {{ classes }}{% endif %}"
					href="{{ item.href }}"
					{%- for attribute, value in item.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
					{{- item.html | safe if item.html else item.text -}}
				</a>
			{%- else %}
				<button
					class="bc-tooltip__menu-link {%- if item.classes %} {{ classes }}{% endif %}"
					type="{{ item.type if item.type else "button" }}"
					{%- for attribute, value in item.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
					{{- item.html | safe if item.html else item.text -}}
				</button>
			{%- endif %}
		</li>
	{% endfor %}
</ul>