
<div
    data-module="bc-gallery"
    class="bc-gallery {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}
>
    <div class="bc-gallery__product-image">
        <img class="active" src="{{ params.mainImage }}">
    </div>
    <ul class="bc-gallery__image-list">
        {%- for item in params.galleryImages %}
            <li class="bc-gallery__image-list-item">
                <img class="active" src="{{ item.image }}" alt="{{ item.imageDescription }}">
            </li>
        {%- endfor %}
    </ul>
</div>

    
