{% from "heading/macro.njk" import bcHeading %}
{% from "icon/macro.njk" import bcIcon %}

<details
	data-module="bc-details"
	class="bc-details {%- if params.classes %} {{ params.classes }}{% endif %}"
	{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
	<summary>
		<div class="bc-details__summary">
			<p class="bc-details__heading">
				{{ (params.heading.html | safe) if params.heading.html else params.heading.text }}
			</p>
			{{ bcIcon({
				classes: "bc-details__icon",
				variant: "chevron-down"
			}) }}
		</div>
	</summary>
	<div class="bc-details__body">
		{{ caller() if caller }}
	</div>
</details>
